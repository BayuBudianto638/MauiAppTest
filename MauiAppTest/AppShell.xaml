<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MauiAppTest.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:MauiAppTest.Views"
	xmlns:local="clr-namespace:MauiAppTest">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="ListDetail"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:ListDetailPage}"
		Route="ListDetailPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="ListDetail1"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:ListDetail1Page}"
		Route="ListDetail1Page" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="ListDetail2"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:ListDetail2Page}"
		Route="ListDetail2Page" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="ListDetail3"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:ListDetail3Page}"
		Route="ListDetail3Page" />
</Shell>
